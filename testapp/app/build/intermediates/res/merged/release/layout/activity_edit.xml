<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xin.testapp.EditActivity">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/reEditChest"
        android:layout_alignEnd="@+id/reEditChest"
        android:id="@+id/reEditWaist"
        android:selectAllOnFocus="true"
        android:hint="Waist" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/reEditNeck"
        android:hint="Neck:"
        android:layout_below="@+id/reEditDate"
        android:selectAllOnFocus="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Save_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveEdit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Name:"
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="70px"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/reEditName"
        android:hint="Name:"
        android:selectAllOnFocus="true"
        android:layout_width="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/reEditDate"
        android:focusable="false"
        android:selectAllOnFocus="true"
        android:hint="Date:"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/reEditBust"
        android:selectAllOnFocus="true"
        android:hint="Bust:"
        android:layout_below="@+id/reEditNeck"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/reEditChest"
        android:selectAllOnFocus="true"
        android:hint="Chest:"
        android:layout_below="@+id/reEditBust"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/reEdithip"
        android:selectAllOnFocus="true"
        android:hint="Hip:"
        android:layout_below="@+id/reEditWaist"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/reEditInseam"
        android:selectAllOnFocus="true"
        android:hint="Inseam:"
        android:layout_below="@+id/reEdithip"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:text="Hip:"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_below="@+id/reEditWaist"
        android:textSize="70px"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:text="Date:"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:textSize="70px"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:text="Inseam:"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:textSize="65px"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/reEdithip"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Waist:"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:textSize="70px"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/reEdithip" />

    <TextView
        android:text="Chest:"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:id="@+id/textView6"
        android:textSize="70px"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_above="@+id/reEditWaist"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Bust:"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:textSize="70px"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Neck:"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:textSize="70px"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_above="@+id/reEditBust"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/reEditComment"
        android:selectAllOnFocus="true"
        android:hint="Comment:"
        android:layout_width="230dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Comment:"
        android:layout_width="80dp"
        android:textSize="65px"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/reEditInseam"
        android:layout_alignParentStart="true"
        android:layout_height="50dp" />

</RelativeLayout>
